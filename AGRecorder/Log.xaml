<Window x:Class="RadioRecorder.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="日志" Height="350" Width="500" Closing="Window_Closing">
    <Grid>
        <RichTextBox x:Name="RTB_Log" Margin="0,0,0,25" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True">
        </RichTextBox>
        <Button Content="保存" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom" Width="50" Click="B_保存_Click" Height="25"/>
        <Button Content="清空" HorizontalAlignment="Right" Margin="0,0,60,0" VerticalAlignment="Bottom" Width="50" Click="B_Clear_Click" Height="25"/>

    </Grid>
</Window>
